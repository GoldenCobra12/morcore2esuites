                <HttpSender name="PostNotificatie" methodType="POST" url="/melding/{meldingUuid}/taakopdracht/{taakOpdrachtUuid}/notificatie"/>
            </SenderPipe>
            
        </Pipeline>
    </Adapter>

</Module>